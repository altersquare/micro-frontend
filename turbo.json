{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "env": [
        "NODE_ENV",
        "VITE_SHELL_REMOTE_ENTRY",
        "VITE_DEMO_ONE_REMOTE_ENTRY",
        "VITE_DEMO_TWO_REMOTE_ENTRY",
        "VITE_DEMO_THREE_REMOTE_ENTRY",
        "VITE_DEMO_COUNTER_REMOTE_ENTRY",
        "VITE_SHELL_APP_URL",
        "VITE_DEMO_ONE_APP_URL",
        "VITE_DEMO_TWO_APP_URL",
        "VITE_DEMO_THREE_APP_URL",
        "VITE_DEMO_COUNTER_APP_URL",
        "VITE_DEMO_ONE_CSS_URL",
        "VITE_DEMO_TWO_CSS_URL",
        "VITE_DEMO_THREE_CSS_URL",
        "VITE_DEMO_COUNTER_CSS_URL",
        "VITE_SHELL_PORT",
        "VITE_DEMO_ONE_PORT",
        "VITE_DEMO_TWO_PORT",
        "VITE_DEMO_THREE_PORT",
        "VITE_DEMO_COUNTER_PORT"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "VITE_SHELL_REMOTE_ENTRY",
        "VITE_DEMO_ONE_REMOTE_ENTRY",
        "VITE_DEMO_TWO_REMOTE_ENTRY",
        "VITE_DEMO_THREE_REMOTE_ENTRY",
        "VITE_DEMO_COUNTER_REMOTE_ENTRY",
        "VITE_SHELL_PORT",
        "VITE_DEMO_ONE_PORT",
        "VITE_DEMO_TWO_PORT",
        "VITE_DEMO_THREE_PORT",
        "VITE_DEMO_COUNTER_PORT"
      ]
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "serve": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    }
  }
}